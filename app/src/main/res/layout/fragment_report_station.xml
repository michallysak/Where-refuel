<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.fragments.ReportStationFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_report"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/H1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:paddingLeft="@dimen/big_break"
                android:paddingTop="@dimen/small_break"
                android:paddingRight="@dimen/medium_break"
                android:paddingBottom="@dimen/small_break"
                android:text="@string/report_gas_station"
                android:textAlignment="center" />

            <ImageView
                android:id="@+id/report_station_btn"
                android:layout_width="?android:attr/actionBarSize"
                android:layout_height="wrap_content"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_send"/>

        </LinearLayout>




    </androidx.appcompat.widget.Toolbar>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <com.google.android.material.textfield.TextInputEditText
        android:id="@+id/report_station_message"
        style="@style/H3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/medium_break"
        android:inputType="textMultiLine"
        android:hint="@string/report_hint" />





</LinearLayout>