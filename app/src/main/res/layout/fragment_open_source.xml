<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:whatever="http://schemas.android.com/apk/res-auto"
    tools:context="pl.michallysak.whererefuel.ui.fragments.OpenSourceFragment"
    android:orientation="vertical">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar_open_source_licences"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                style="@style/H1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:paddingLeft="@dimen/big_break"
                android:paddingTop="@dimen/small_break"
                android:paddingRight="@dimen/medium_break"
                android:paddingBottom="@dimen/small_break"
                android:text="@string/open_source"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/open_source_licences_all"
                android:layout_width="?android:attr/actionBarSize"
                android:layout_height="wrap_content"
                android:padding="@dimen/small_break"
                android:background="?android:attr/selectableItemBackground"
                android:src="@drawable/ic_oss"/>

        </LinearLayout>




    </androidx.appcompat.widget.Toolbar>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider" />

    <ListView
        android:id="@+id/oss_list_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    </ListView>


</LinearLayout>
