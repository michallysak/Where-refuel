<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/colorPrimary</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.Launcher">
        <item name="android:windowBackground">@drawable/splash_screen</item>
    </style>

    <style name="AppThemeLigth" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>

        <item name="android:textColor">@color/black</item>
        <item name="android:colorBackground">@color/white</item>
        <item name="floatingSearch_leftActionColor">@color/gray</item>
        <item name="floatingSearch_menuItemIconColor">@color/gray</item>
        <item name="floatingSearch_actionMenuOverflowColor">@color/gray</item>
        <item name="floatingSearch_backgroundColor">@color/white</item>
        <item name="colorButtonNormal">@color/white</item>



        <item name="android:statusBarColor" tools:targetApi="m">@color/colorAccent</item>

        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/white</item>
        <item name="android:windowBackground">@color/white</item>


        <item name="actionMenuTextColor">@color/black</item>
        <item name="drawerArrowStyle">@style/DrawerBlack</item>

        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

<!--        <item name="colorControlHighlight">@color/semi_blue</item>-->

    </style>

    <style name="AppThemeDark" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/google_sans_regular</item>

        <item name="android:textColor">@color/white</item>
        <item name="android:colorBackground">@color/gray</item>
        <item name="android:buttonStyleToggle">@color/white</item>
        <item name="floatingSearch_leftActionColor">@color/white</item>
        <item name="floatingSearch_menuItemIconColor">@color/white</item>
        <item name="floatingSearch_actionMenuOverflowColor">@color/white</item>
        <item name="floatingSearch_backgroundColor">@color/gray_light</item>
        <item name="colorButtonNormal">@color/gray_light</item>

        <item name="android:statusBarColor" tools:targetApi="lollipop">@color/gray</item>
        <item name="android:navigationBarColor" tools:targetApi="lollipop">@color/black</item>
        <item name="android:windowBackground">@color/gray</item>

        <item name="android:textColorPrimary">@color/white</item>


        <item name="android:editTextColor">@color/white</item>
        <item name="android:textColorHint">@color/semi_white</item>

        <item name="actionMenuTextColor">@color/white</item>
        <item name="drawerArrowStyle">@style/DrawerWhite</item>


        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

        <item name="android:textColorPrimaryInverse">@color/white</item>


        <item name="colorControlHighlight">@color/semi_blue</item>

    </style>

    <style name="DarkAlertDialog" parent="Theme.AppCompat.DayNight.Dialog">
        <item name="android:textColor">@color/white</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>





    <style name="DrawerWhite" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>

    <style name="DrawerBlack" parent="@style/Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>

    <style name="H1">
        <item name="android:textSize">26sp</item>
    </style>

    <style name="H2">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="H3">
        <item name="android:textSize">18sp</item>
    </style>

    <style name="H4">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="H5">
        <item name="android:textSize">13sp</item>
    </style>



    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.MaterialComponents.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.MaterialComponents.Light" />



</resources>
